local server = require "cucumber.server"
local steps = require "examples.animation.features.step_definitions.steps"
local wait = require "cucumber.wait"

function init(self)
	self.server = server.create(9666)
	self.server.start()
end

function final(self)
	self.server.stop()
end

function update(self, dt)
	self.server.update()
	wait.update(dt)
end
